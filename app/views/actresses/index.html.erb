<h1>Actresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Initial</th>
      <th>Bust</th>
      <th>Waist</th>
      <th>Hip</th>
      <th>Height</th>
      <th>Birth</th>
      <th>Blood type</th>
      <th>Ruby</th>
      <th>Birth place</th>
      <th>Image lg</th>
      <th>Image sm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actresses.each do |actress| %>
      <tr>
        <td><%= actress.name %></td>
        <td><%= actress.initial %></td>
        <td><%= actress.bust %></td>
        <td><%= actress.waist %></td>
        <td><%= actress.hip %></td>
        <td><%= actress.height %></td>
        <td><%= actress.birth %></td>
        <td><%= actress.blood_type %></td>
        <td><%= actress.ruby %></td>
        <td><%= actress.birth_place %></td>
        <td><%= actress.image_lg %></td>
        <td><%= actress.image_sm %></td>
        <td><%= link_to 'Show', actress %></td>
        <td><%= link_to 'Edit', edit_actress_path(actress) %></td>
        <td><%= link_to 'Destroy', actress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

